{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": false,
  "timezone": "Asia/Tokyo",
  "schedule": [
    "before 10am on Monday"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "platformAutomerge": true,
      "automerge": true
    }
  ]
}
